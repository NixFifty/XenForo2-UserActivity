{
    "template": "thread_list_macros",
    "description": "Adds activity containers",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "#(<a.*?link\\('threads.*?\\$thread\\.title.*?</a>)#si",
    "replace": "$1<xf:macro template=\"UA_ViewContainer_macros\" name=\"viewerCounts\"\n\t\t\targ-recordCounts=\"{$__globals.UA_RecordCounts}\" \n\t\t\targ-contentType=\"thread\"\n\t\t\targ-contentId=\"{$thread.thread_id}\"\n\t\t\t/>"
}