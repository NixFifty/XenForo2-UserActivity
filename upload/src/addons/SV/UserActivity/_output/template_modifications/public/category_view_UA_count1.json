{
    "template": "category_view",
    "description": "Adds activity containers (counts) (inject the xf:h1 tag)",
    "execution_order": 1000,
    "enabled": true,
    "action": "preg_replace",
    "find": "#({\\$category\\.title}.*?)(</xf:title>)(?!.*?</xf:h1>)#si",
    "replace": "$0\n<xf:h1>$1</xf:h1>"
}