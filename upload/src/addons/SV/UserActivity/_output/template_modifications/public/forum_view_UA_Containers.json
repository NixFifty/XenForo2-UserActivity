{
    "template": "forum_view",
    "description": "Adds activity containers",
    "execution_order": 10,
    "enabled": true,
    "action": "preg_replace",
    "find": "#({\\$forum\\.Node\\.title}.*?)(</xf:title>)#si",
    "replace": "$0\n<xf:h1>\n\t$1\n\t<xf:macro template=\"UA_ViewContainer_macros\" name=\"viewerCounts\"\n\t\t\targ-recordCounts=\"{$UA_RecordCounts}\" \n\t\t\targ-contentType=\"node\"\n\t\t\targ-contentId=\"{$forum.node_id}\"\n\t\t\t/>\n</xf:h1>"
}